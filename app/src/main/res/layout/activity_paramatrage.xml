<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Paramatrage">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:orientation="horizontal"
            android:layout_marginRight="60dp"
            android:layout_marginLeft="60dp">

            <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="IP : "

                android:textColor="#50150b"

                android:textSize="18dp"
                android:textStyle="bold"
                android:typeface="serif" />

            <EditText
                android:id="@+id/ip"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:text="192.168.1.248:54503"
                android:textColor="@color/colorAccent"
                android:textSize="20sp"
                android:textStyle="bold"
                android:typeface="serif" />

            <!-- 192.168.100.120
                    192.168.1.2 -->
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="60dp"
            android:layout_marginLeft="60dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Base : "
                android:textColor="#50150b"

                android:textSize="18dp"
                android:textStyle="bold"
                android:typeface="serif" />

            <EditText
                android:id="@+id/db"
                android:layout_width="fill_parent"
                android:layout_height="50dp"
                android:background="@drawable/abc_textfield_search_activated_mtrl_alpha"
                android:text="I2S_RestaurantHannibalPark"
                android:textColor="@color/colorAccent"
                android:textSize="20sp"
                android:textStyle="bold"
                android:typeface="serif" />

            <!--
            SOGOOD
            I2S_RESTAURANT
            -->
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="60dp"
            android:layout_marginLeft="60dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="user : "
                android:textColor="#50150b"
                android:textSize="18dp"
                android:textStyle="bold"
                android:typeface="serif" />

            <EditText
                android:id="@+id/user"
                android:layout_width="fill_parent"
                android:layout_height="50dp"
                android:autoText="false"
                android:background="@drawable/abc_textfield_search_activated_mtrl_alpha"
                android:text="sa"
                android:textColor="@color/colorAccent"
                android:textSize="25sp"
                android:textStyle="bold"
                android:typeface="serif" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="60dp"
            android:layout_marginLeft="60dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Mot de passe"

                android:textColor="#50150b"
                android:textSize="18dp"
                android:textStyle="bold"
                android:typeface="serif" />

            <EditText
                android:id="@+id/password"
                android:layout_width="fill_parent"
                android:layout_height="50dp"
                android:layout_marginLeft="3dp"
                android:background="@drawable/abc_textfield_search_activated_mtrl_alpha"
                android:inputType="textPassword"
                android:text="ideal2s"
                android:textColor="@color/colorAccent"
                android:textSize="25sp"
                android:textStyle="bold"
                android:typeface="serif" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical">

            <Button
                android:id="@+id/add"
                android:layout_width="200dp"
                android:layout_height="75dp"
                android:layout_marginLeft="5dp"


                android:background="@drawable/btregister"
                android:shadowColor="#0D5BA8"
                android:shadowDx="0"
                android:shadowDy="0"

                android:shadowRadius="5"
                android:typeface="serif" />

            <Button
                android:id="@+id/cancel"
                android:layout_width="200dp"
                android:layout_height="75dp"
                android:layout_marginLeft="5dp"


                android:background="@drawable/btno"
                android:shadowColor="#0D5BA8"

                android:shadowDx="0"
                android:shadowDy="0"

                android:shadowRadius="5"
                android:typeface="serif" />
        </LinearLayout>

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>